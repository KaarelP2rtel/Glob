@{
    ViewData["Title"] = "";
}
@model List<Post>
<div class="col-md-8">
    @foreach (var post in Model)
    {

        <div class="panel panel-info ">
            <div class="panel-heading">
                <a href="/Post/@post.PostId">@post.Title</a>
            </div>
            <div class="panel-body">
                @if (post.Content.Length < 288)
                {
                    @post.Content

                }
                else
                {
                    @post.Content.Substring(0, 288).Trim()
                    @("...")


                }

            </div>




        </div>

    }

</div>
